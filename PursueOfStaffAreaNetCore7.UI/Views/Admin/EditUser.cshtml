@model EditUserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="display-6">@ViewData["Title"]</h1>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-2">
        <form asp-action="EditUser" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger small"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="StaffId"></label>
                @Html.DropDownListFor(m=>m.StaffId,(List<SelectListItem>) ViewBag.Staffs, "Choose", new { @class = "dropdown form-control pull-right" })
            </div>
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="enter username" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="enter email" />
            </div>
            <div class="form-group mb-3">
                @{
                    string admin = "admin";
                    string standart = "standart";
                }
                <label asp-for="Role" class="form-label"></label> <br />
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Role" value="@admin" id="flexRadioDefault2">
                    <label class="form-check-label" for="flexRadioDefault2">
                        admin
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Role" value="@standart" id="flexRadioDefault1">
                    <label class="form-check-label" for="flexRadioDefault1">
                        standart
                    </label>
                </div> <br /><br />
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-warning" title="Edit"><i class="fa-solid fa-edit me-2"></i>Edit</button>
                    <a asp-action="ListUser" class="btn btn-secondary" title="Back to List"><i class="fa-solid fa-angles-left me-2"></i>Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{
    @Html.Partial("_ValidationScriptsPartial")
}





@model AddAllowRequestViewModel
@{
    ViewData["Title"] = "Add AllowRequest";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="display-6">@ViewData["Title"]</h1>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-2">
        <form asp-action="Add" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger small"></div>

            <div class="form-group mb-3">
                <label asp-for="StaffId"></label>
                @Html.DropDownListFor(m=>m.StaffId,(List<SelectListItem>) ViewBag.Staffs, "Choose", new { @class = "dropdown form-control pull-right" })
            </div>
            <div class="form-group mb-3">
                <label asp-for="AllowTypeId"></label>
                @Html.DropDownListFor(m=>m.AllowTypeId,(List<SelectListItem>) ViewBag.AllowTypes, "Choose", new { @class = "dropdown form-control pull-right" })
            </div>
            <div class="form-group mb-3">
                <label asp-for="HowManyDays" class="form-label"></label>
                <input type="number" asp-for="HowManyDays" class="form-control" placeholder="enter how many days" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="StartDate" class="form-label"></label>
                <input asp-for="StartDate" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="EndDate" class="form-label"></label>
                <input asp-for="EndDate" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="UserId"></label>
                @Html.DropDownListFor(m=>m.UserId,(List<SelectListItem>) ViewBag.UsersConfirming, "Choose", new { @class = "dropdown form-control pull-right" })
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-success" title="Save"><i class="fa-solid fa-save me-2"></i>Save</button>
                <a asp-action="List" class="btn btn-secondary" title="Back to List"><i class="fa-solid fa-angles-left me-2"></i>Back to List</a>
            </div>
        </form>
    </div>
</div>

@section scripts{
    @Html.Partial("_ValidationScriptsPartial")
}



